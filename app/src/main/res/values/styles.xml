<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Application defined styles -->
    <style name="base_margin">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="EditTextMultiline" parent="@style/base_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:minLines">3</item>
        <item name="android:gravity">top|left</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="DefaultLabel" parent="@style/base_margin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>

        <!-- <item name="android:layout_marginTop">8dp</item> -->
        <!-- <item name="android:padding">8dp</item> -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="DefaultDiv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="android:contentDescription">@string/desc_h_divisor</item>
    </style>

    <style name="TitleLabel" parent="@style/DefaultLabel">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TitleDiv" parent="@style/DefaultDiv">
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="SectionLabel">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="SectionDiv" parent="@style/TitleDiv" />

</resources>